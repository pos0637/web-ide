{
    "presets": [
        "@babel/preset-env",
        "@babel/preset-react"
    ],
    "plugins": [
        [
            "transform-class-properties"
        ],
        [
            "babel-plugin-root-import",
            {
                "rootPathPrefix": "~",
                "rootPathSuffix": "./src"
            }
        ],
        [
            "import",
            {
                "libraryName": "antd",
                "libraryDirectory": "es",
                "style": "css"
            }
        ]
    ]
}